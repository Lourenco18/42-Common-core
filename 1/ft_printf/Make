NAME		= libftprintf.a

CC			= cc
CFLAGS		= -Wall -Wextra -Werror
AR			= ar rcs
RM			= rm -f

SRC			= ft_printf.c
OBJ			= $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ)
	@$(AR) $(NAME) $(OBJ)
	@echo "âœ… $(NAME) created successfully!"

clean:
	@$(RM) $(OBJ)
	@echo "ðŸ§¹ Object files cleaned."

fclean: clean
	@$(RM) $(NAME)
	@echo "ðŸ§½ All cleaned (libftprintf.a removed)."

re: fclean all



.PHONY: all clean fclean re
